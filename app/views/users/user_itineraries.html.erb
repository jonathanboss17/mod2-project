<div class="ui sizer vertical segment">
<div class="ui medium header"><%= button_to "Create Itinerary", {action: "new", controller: "itineraries"}, {class: 'ui blue inverted button', method: :get} %></div>


<div class="ui three stackable cards">
    <% @user.itineraries.each do |itin| %>
    <a class="ui raised card" href= "/itineraries/<%= itin.id %>">
    <div class="content">
                <div class="header"><%= itin.title %></div><br>

                    <div class="meta">
                        <span class="left floated category">Genre</span>
                        <span class="right floated category"><%= itin.destination.location %></span>
                    </div><br><br>

                    <div class="description">
                        <h4 class="ui left sub header">Day 1:</h4>
                            <div class="content">
                                <div class="summary">
                                    <%= itin.one_day %>
                                </div>
                            </div>

                        <h4 class="ui left sub header">Day 2:</h4>
                            <div class="content">
                                <div class="summary">
                                    <%= itin.two_day %>
                                </div>
                            </div>
                            
                        <h4 class="ui left sub header">Day 3:</h4>
                            <div class="content">
                                <div class="summary">
                                    <%= itin.three_day %>
                                </div>
                            </div>   
                    </div>
        </div>
        
            <div class="extra content">
                <div class="right floated author">
                    <img class="ui avatar image" src="https://i.imgur.com/TjI858b.jpg"> <%= @user.username %>
                </div>
                
                <div class="left floated date">
                    <%= itin.created_at.to_date %>
                </div>
            </div>
        
    </a>

    <% end %>
</div>

</div>



